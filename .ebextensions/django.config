option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: ElectronicComponentWarehouseManagementSystemApp.wsgi:application

packages:
  yum:
    git: []

container_commands:
  01_migrate:
    command: "python3 manage.py migrate --noinput"
    leader_only: true

  02_createsuperuser:
    command: >
      python3 manage.py shell -c "import os; from django.contrib.auth import get_user_model;
User = get_user_model();
username = os.environ.get('DJANGO_SUPERUSER_USERNAME', 'admin');
email = os.environ.get('DJANGO_SUPERUSER_EMAIL', 'admin@example.com');
password = os.environ.get('DJANGO_SUPERUSER_PASSWORD', 'Admin@123');
if not User.objects.filter(username=username).exists():
    User.objects.create_superuser(username, email, password);
print('âœ… Superuser created or already exists');"
    leader_only: true
