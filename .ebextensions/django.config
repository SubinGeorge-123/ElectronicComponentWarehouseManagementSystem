option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: ElectronicComponentWarehouseManagementSystemApp/wsgi.py:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: ElectronicComponentWarehouseManagementSystemApp.settings

packages:
  yum:
    git: []

container_commands:
  01_migrate:
    command: "python3 manage.py migrate --noinput"
    leader_only: true
  02_createsuperuser:
    command: "python3 manage.py shell -c \"\nimport os\nfrom django.contrib.auth import get_user_model\nUser = get_user_model()\nif not User.objects.filter(username='admin').exists():\n    User.objects.create_superuser('admin', 'admin@example.com', 'admin123')\n\""
    leader_only: true