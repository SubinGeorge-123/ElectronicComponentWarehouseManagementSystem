option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: ElectronicComponentWarehouseManagementSystemApp.wsgi:application

packages:
  yum:
    git: []

container_commands:
  01_migrate:
    command: "python3 manage.py migrate --noinput"
    leader_only: true

  02_collectstatic:
    command: "python3 manage.py collectstatic --noinput"
    leader_only: true

  03_create_admin:
    command: "python3 manage.py shell -c \"from django.contrib.auth.models import User; \
      User.objects.filter(username='admin').exists() or \
      User.objects.create_superuser('admin', 'admin@example.com', 'admin')\""
    leader_only: true

